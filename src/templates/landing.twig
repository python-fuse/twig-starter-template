{% extends "base.twig" %}

{% block title %}Twig Starter Template
{% endblock %}

{% block content %}
	<div class="min-h-screen relative overflow-hidden">
		<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--color-twig)_0%,_transparent_50%)] opacity-5"></div>
		<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--color-npm)_0%,_transparent_50%)] opacity-5"></div>

		<nav class="relative z-10 flex items-center justify-between px-8 py-6 max-w-7xl mx-auto">
			<div class="flex items-center gap-2">
				<div class="w-3 h-3 bg-twig rotate-45"></div>
				<span class="font-mono text-sm tracking-wider">TWIG STARTER</span>
			</div>
			<div class="flex items-center gap-8">
				<a href="/docs" class="text-smoke hover:text-white transition-colors text-sm">Docs</a>
				<a href="https://github.com/python-fuse/twig-starter-template" class="inline-flex items-center gap-2 text-smoke hover:text-white transition-colors text-sm">
