<aside class="hidden xl:block w-56 shrink-0 border-l border-white/5">
	<div class="sticky top-[65px] h-[calc(100vh-65px)] overflow-y-auto p-6">
		<h4 class="text-xs font-semibold uppercase tracking-wider text-smoke mb-3">On this page</h4>
		<ul class="space-y-2 text-sm">
			{% for link in links %}
				<li>
					<a href="#{{ link.id }}" class="text-smoke hover:text-white transition-colors">{{ link.label }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</aside>

