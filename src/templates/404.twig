{# 404 error page template #}
{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <main class="min-h-screen flex flex-col items-center justify-center bg-gray-50">
        <h1 class="text-9xl font-bold text-gray-200">404</h1>
        <h2 class="text-2xl font-semibold text-gray-700 mt-4">Page Not Found</h2>
        <p class="text-gray-500 mt-2">Sorry, the page you are looking for does not exist.</p>
        <a href="/" class="mt-6 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            Return to Home
        </a>
    </main>
{% endblock %}
